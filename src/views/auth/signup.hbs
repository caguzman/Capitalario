<div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Registro de Usuarios</h3>
                </div>
                <div class="card-body">
                    <form action="/signup" method="POST">
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <input type="text" name="mbrNombre" placeholder="Nombre(s)" class="form-control" required autofocus>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <input type="text" name="mbrApellidos" placeholder="Apellidos" class="form-control" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="input-group mb-2 mr-sm-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text"><i class="fas fa-user"></i></div>
                                    </div>
                                    <input type="text" name="mbrUsuario" placeholder="Nombre de usuario" class="form-control" required>
                                </div>
                            </div>
                            <div class="col">
                                <div class="input-group mb-2 mr-sm-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text"><i class="fas fa-key"></i></div>
                                    </div>
                                    <input type="password" name="mbrPassword" placeholder="Password" class="form-control" required>
                                </div>
                            </div>
                        </div>
                        <div class="input-group mb-2 mr-sm-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><i class="far fa-envelope"></i></div>
                            </div>
                            <input type="email" name="mbrEmail" placeholder="Correo electronico" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <input type="text" name="mbrTelefono" placeholder="Telefono" class="form-control">
                        </div>
                        <div class="input-group mb-2 mr-sm-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><i class="fas fa-users"></i></div>
                            </div>
                            <select class="custom-select mx-auto" name="grpCodigo" id="inlineSelectGrp">
                                {{#each grps}}
                                <option value="{{grpCodigo}}">{{grpNombre}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Grabar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>