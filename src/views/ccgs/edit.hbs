<div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-header">
                    <div class="shadow p-2 mb-2 bg-white rounded">
                        <h4 class="card-title text-center">Modificacion de Datos</h4>
                    </div>
                </div>
                <div class="card-body">
                    <form action="/ccgs/edit/{{ccgs.ccgCodigo}}" method="POST">
                        <div class="form-row">
                            <div class="col-md-2 m-3">
                                <h6>CCG: </h6>
                            </div>
                            <div class="col">
                                <input type="text" value="{{ccgs.ccgNombre}}" class="form-control" name="ccgNombre" placeholder="Nombre CCG" autofocus>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-2 m-3">
                                <h6>Meta: </h6>
                            </div>
                            <div class="col">
                                <input type="number" value="{{ccgs.ccgMeta}}" class="form-control" name="ccgMeta" placeholder="Meta">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-2 m-3">
                                <h6>Obs: </h6>
                            </div>
                            <div class="col">
                                <textarea name="ccgObservacion" rows="3" class="form-control" placeholder="Observaciones">{{ccgs.ccgObservacion}}</textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row m-3">
                                <button class="btn btn-success btn-block">
                                    Grabar
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>