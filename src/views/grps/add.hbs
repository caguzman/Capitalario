<div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-header">
                    <div class="shadow p-2 mb-2 bg-white rounded">
                        <h4 class="card-title text-center">Registro de Datos</h4>
                    </div>
                </div>
                <div class="card-body">
                    <form action="/grps/add" method="POST">
                        <div class="input-group mb-2 mr-sm-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text">Rama:</div>
                            </div>
                            <select class="custom-select mx-auto" name="rmaCodigo" id="inlineSelectGrp">
                                {{#each ramas}}
                                <option value="{{rmaCodigo}}">{{rmaNombre}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="grpNombre" placeholder="Grupo" required>
                        </div>
                        <button class="btn btn-success btn-block">
                            Grabar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>